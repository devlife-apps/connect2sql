<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/item_vertical_padding"
    android:paddingLeft="@dimen/item_horizontal_padding"
    android:paddingRight="@dimen/item_horizontal_padding"
    android:paddingTop="@dimen/item_vertical_padding">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/table_list_type_table"
        android:src="@drawable/ic_table_type_table" />

    <TextView
        android:id="@+id/item_title"
        style="@style/TextAppearance.C2SQL.Item.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/item_icon"
        android:text="@string/item_browse_table_sample" />

    <TextView
        android:id="@+id/item_subtitle"
        style="@style/TextAppearance.C2SQL.Item.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_title"
        android:layout_toEndOf="@+id/item_icon"
        android:text="@string/table_list_type_table" />
</RelativeLayout>
