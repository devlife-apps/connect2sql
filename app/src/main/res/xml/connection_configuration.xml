<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="name"
        android:title="@string/name"/>

    <PreferenceCategory
        android:key="connection_configuration"
        android:title="@string/connection_configuration">
        <EditTextPreference
            android:key="domain"
            android:title="@string/domain"/>
        <EditTextPreference
            android:key="host"
            android:title="@string/host"/>
        <EditTextPreference
            android:key="instance"
            android:title="@string/instance"/>
        <EditTextPreference
            android:key="port"
            android:title="@string/port"/>
        <EditTextPreference
            android:key="username"
            android:title="@string/username"/>
        <EditTextPreference
            android:key="password"
            android:title="@string/password"/>
        <EditTextPreference
            android:key="database"
            android:title="@string/database"/>

        <CheckBoxPreference
            android:key="use_ssl"
            android:title="@string/use_ssl"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="additional_options"
        android:title="@string/additional_options">

        <EditTextPreference
            android:enabled="false"
            android:title="@string/no_options_available"/>

    </PreferenceCategory>

</PreferenceScreen>